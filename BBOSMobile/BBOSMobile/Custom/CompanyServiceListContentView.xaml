<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="BBOSMobile.Forms.CompanyServiceListContentView">
	<ContentView.Content>
<ListView 			
       		x:Name="listViewCompany"
       		ItemsSource="{Binding Company.Services}"
       		RowHeight="40"
       		Style="{StaticResource ListViewStyle}"
       		>
		    <ListView.ItemTemplate>
		    	<DataTemplate>
		        	<ViewCell>
			        	<ViewCell.ContextActions>
	        			</ViewCell.ContextActions>
						<ViewCell.View>
							<StackLayout Padding="5,0,0,0"
								Orientation="Vertical" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand">
								<Label Text="{Binding Name}"
									HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand" Style="{StaticResource GeneralListMediumLabelStyle}"/>
							</StackLayout>
						</ViewCell.View>
					</ViewCell>
				</DataTemplate>
	    </ListView.ItemTemplate>
	  </ListView>
	</ContentView.Content>
</ContentView>

