<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="BBOSMobile.Forms.CompanyCommodityListContentView">
	<ContentView.Content>
<ListView 			
       		x:Name="listViewCompany"
       		ItemsSource="{Binding Company.Commodities}"
       		Style="{StaticResource ListViewStyle}"
       		>
		    <ListView.ItemTemplate>
		    	<DataTemplate>
		        	<ViewCell>
						<ViewCell.View>
							<StackLayout Padding="5,0,0,0" VerticalOptions="CenterAndExpand"
								Orientation="Vertical" HorizontalOptions="FillAndExpand">
<!--								<Label Text="{Binding Abbreviation}"
									HorizontalOptions="FillAndExpand" Style="{StaticResource GeneralListMediumLabelStyle}"/>-->
								<Label Text="{Binding Definition}"
									HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand" Style="{StaticResource GeneralListMediumLabelStyle}"/>
							</StackLayout>
						</ViewCell.View>
					</ViewCell>
				</DataTemplate>
	    </ListView.ItemTemplate>
	  </ListView>
	</ContentView.Content>
</ContentView>



	