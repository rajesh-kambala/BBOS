	xmlns:base="clr-namespace:BBOSMobile.Forms;assembly=BBOSMobile" Style="{StaticResource WatchDogPageStyle}">
<RelativeLayout HorizontalOptions="FillAndExpand" x:Name="parentLayout" VerticalOptions="FillAndExpand">
<ActivityIndicator
		    x:Name="loadLayout"
            WidthRequest="50" 
            HeightRequest="50"
            IsVisible="true"
            IsRunning="true"
             RelativeLayout.XConstraint=
                 "{ConstraintExpression Type=RelativeToParent, 
                                        Property=Width,
                                        Factor=0.4 }"

             RelativeLayout.YConstraint=
                 "{ConstraintExpression Type=RelativeToParent, 
                                        Property=Height,
                                        Factor=0.4}" />
<StackLayout Orientation="Vertical" RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width}" RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToParent, Property=Height}">
