<StackLayout x:Name="mainLayout" Spacing="0" HorizontalOptions="StartAndExpand" IsVisible="false" >
		<StackLayout HorizontalOptions="FillAndExpand" Style="{StaticResource CompanyHeaderStyle}" Padding="5,5,10,10" BackgroundColor="#003689">
                  <Label Text="{Binding Company.Name}" HorizontalOptions="FillAndExpand" LineBreakMode="TailTruncation"  Style="{StaticResource CompanyHeaderTopLabelStyle}"/>
                  <Label Text="{Binding Company.Location}" HorizontalOptions="FillAndExpand"  Style="{StaticResource CompanyHeaderMiddleLabelStyle}"/>
                  <Label Text="{Binding BBIDDisplay}" HorizontalOptions="FillAndExpand" Style="{StaticResource CompanyHeaderBottomLabelStyle}"/>
        </StackLayout>
         <ScrollView x:Name="sectionLayout" IsVisible="false" >
			<StackLayout   HorizontalOptions="FillAndExpand" Orientation="Horizontal" HeightRequest="10" BackgroundColor="#1e90ff">
			</StackLayout>
		</ScrollView>
		<StackLayout HorizontalOptions="FillAndExpand"
		 	x:Name="listLayout" IsVisible="false">
		</StackLayout>
</StackLayout>
<StackLayout Padding="5, 5, 5, 5" Spacing="10" Orientation="Horizontal" x:Name="buttonLayout" IsVisible="false">
				<Button 
			  		x:Name="btnCancel"		 
			  		Clicked="OnCancelButtonClicked"
			  		HorizontalOptions="FillAndExpand"
			  		Text="Cancel"
			  		Style="{StaticResource NotesButtonStyle}" 
			  	/>
